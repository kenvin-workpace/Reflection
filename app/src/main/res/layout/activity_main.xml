<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/btn_person"
            style="@style/cardview_set"
            app:cardElevation="5sp">

            <TextView
                style="@style/textview_set"
                android:text="person"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_hashmap"
            style="@style/cardview_set"
            app:cardElevation="5sp">

            <TextView
                style="@style/textview_set"
                android:text="hashmap"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_field"
            style="@style/cardview_set"
            app:cardElevation="5sp">

            <TextView
                style="@style/textview_set"
                android:text="field"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_modifyField"
            style="@style/cardview_set"
            app:cardElevation="5sp">

            <TextView
                style="@style/textview_set"
                android:text="modifyField"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_method"
            style="@style/cardview_set"
            app:cardElevation="5sp">

            <TextView
                style="@style/textview_set"
                android:text="method"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_methods"
            style="@style/cardview_set"
            app:cardElevation="5sp">

            <TextView
                style="@style/textview_set"
                android:text="methods"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_array"
            style="@style/cardview_set"
            app:cardElevation="5sp">

            <TextView
                style="@style/textview_set"
                android:text="array"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/btn_finger_count"
            style="@style/cardview_set"
            app:cardElevation="5sp">

            <TextView
                style="@style/textview_set"
                android:text="finger count"/>
        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
</ScrollView>